<div id="octolapse_add_edit_profile_dialog" class="modal hide fade">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form id="octolapse_add_edit_profile_form">
        <div class="modal-header">
          <a href="#" class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
          <h3 class="modal-title"></h3>
        </div>
        <div class="modal-body">
          <div  data-bind="template: { name: Octolapse.Settings.AddEditProfile().templateName, data: Octolapse.Settings.AddEditProfile().profileObservable}" ></div>
        </div>
        <div class="modal-footer" style="bottom:0;position:relative">
          <div class="row-fluid">
            <div id="add_edit_validation_summary" class="alert alert-danger span12" style="display:none;">
              <div class="error-count"></div>
            </div>
          </div>
          <div class="row-fluid">
            <span class="span4">
              <a href="#" class="btn btn-default cancel input-block-level" >Cancel</a>
            </span>
            <span class="span4">
              <a href="#" class="btn btn-default set-defaults input-block-level"> Defaults</a>
            </span>
            <span class="span4">
              <a href="#" class="btn btn-primary save input-block-level"> Save</a>
            </span>

          </div>
        </div>
      </form>
    </div>
  </div>
</div>

