<script type="text/html" id="octolapse-settings-main">

  <div class="panel-heading">
    <h3 class="profile-title">Main Settings</h3>
  </div>
  <div class="panel-body">
    <div>
      <span class="fa-lg" data-bind="attr: { title: Octolapse.enabled() ? 'Octolapse is enabled' : 'Octolapse is disabled'}">
        
        <i class="fa fa-check " data-bind="css:{'fa-check': (Octolapse.enabled()  ), 'fa-close': (!Octolapse.enabled() ) },style: { color: (Octolapse.enabled()  ) ? 'limegreen' : '' }"></i>
      </span>
      <span data-bind="text: Octolapse.enabled() ? 'Octolapse is Enabled' : 'Octolapse is Disabled'"></span>
    </div>
    <div>
      <span class="fa-lg" data-bind="attr: { title: Octolapse.navbar_enabled() ? 'The navbar control is enabled' : 'The navbar control is disabled'}">
        
        <i class="fa fa-check " data-bind="css:{'fa-check': (Octolapse.navbar_enabled()  ), 'fa-close': (!Octolapse.navbar_enabled() ) },style: { color: (Octolapse.navbar_enabled()  ) ? 'limegreen' : '' }"></i>
      </span>
      <span data-bind="text: Octolapse.navbar_enabled() ? 'Navbar Control is Enabled' : 'Navbar Control is Disabled'"></span>
    </div>



    
  </div>
  <div class="panel-footer">
    <div class="row-fluid">
      <a href="#" class="span12 btn btn-default cancel input-block-level" data-bind="click: showEditMainSettingsPopup">Edit Main Settings</a>
    </div>

  </div>

  <div id="octolapse_edit_settings_main_dialog" class="modal fade hide">

    <div class="modal-dialog" role="document">

      <div class="modal-content">
        <form id="octolapse_add_edit_main_settings_form" class="form-horizontal">
          <div class="modal-header">
            <a href="#" class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
            <h3 class="modal-title">Edit Main Settings</h3>
          </div>
          <div class="modal-body">
            <div class="control-group">
              <div class="controls">
                <label class="checkbox">
                  <input type="checkbox" title="Enable or disable the plugin" data-bind="checked:is_octolapse_enabled " />Enable Octolapse
                </label>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <label class="checkbox">
                  <input type="checkbox" title="Enable or disable navbar icon" data-bind="checked:show_navbar_icon" />Navbar Icon Enabled
                  <span class="help-inline">The navbar icon, when enabled, will only display while printing.</span>
                </label>
              </div>
            </div>
          </div>
          <div class="modal-footer" style="bottom:0;position:relative">
            <div class="row-fluid">
              <div id="add_edit_validation_summary" class="alert alert-danger span12" style="display:none;">
                <div class="error-count"></div>
              </div>
            </div>
            <div class="row-fluid">
              <span class="span4">
                <a href="#" class="btn btn-default cancel input-block-level" data-bind="click: cancelDialog">Cancel</a>
              </span>
              <span class="span4">
                <a href="#" class="btn btn-default set-defaults input-block-level" data-bind="click: resetMainSettings"> Defaults</a>
              </span>
              <span class="span4">
                <a href="#" class="btn btn-primary save input-block-level" data-bind="click: saveMainSettings"> Save</a>
              </span>
            </div>
          </div>
        </form>
      </div>
    </div>


  </div>



</script>



