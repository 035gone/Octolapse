<script type="text/html" id="webcam-settings-popup-template">
    <div id="octolapse_webcam_settings_dialog" class="modal hide fade octolapse">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="octolapse_webcam_settings_form" class="form-horizontal octolapse_form">
                    <div class="modal-header">
                        <div>
                            <a class="close" aria-hidden="true">&times;</a>
                        </div>
                        <div>
                            <h3>Camera Settings - <span data-bind="text:Octolapse.Status.WebcamSettings.webcam_settings.name" /></h3>

                            <div class="webcam_settings_preview">
                                <img id="octolapse_webcam_settings_stream" class="octolapse_webcam_stream_preview"  style="display:none;" data-bind="streamLoading:{src: Octolapse.Status.WebcamSettings.webcam_settings.stream_url, loading_selector: '#octolapse_webcam_settings_stream_loading', error_selector: '#octolapse_webcam_settings_stream_error', max_width: 900, max_height:333}">
                                <div id="octolapse_webcam_settings_stream_error" class="alert" style="display:none;">
                                    Unable to load the webcam stream
                                </div>
                                <div id="octolapse_webcam_settings_stream_loading" style="display:none;">
                                    Loading the webcam stream
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="modal-body scrollable" data-bind="template:{name:'webcam-settings-template', data:Octolapse.Status.WebcamSettings.webcam_settings}">
                    </div>
                    <div class="modal-footer" style="bottom:0;position:relative">
                        <div class="row-fluid">
                                <button type="button" class="span4 btn btn-default cancel input-block-level">Cancel</button>
                                <button type="button" class="span4 btn btn-default set-defaults input-block-level">Defaults</button>
                                <button type="button" class="span4 btn btn-primary save input-block-level">Save</button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</script>
{% include "octolapse_profiles_camera_webcam.jinja2" %}

