<script type="text/html" id="octolapse-simplify-3d-template">
    <div>
        <div>
            <h4>Slicer - Simplify 3d</h4>
            <p>
                Match all of the speed settings in your current slicer profile with all of the settings below. In order to
                use feature detection (used in the 'high quality' snapshot profiles), it is best if each speed is unique.
                Make sure to use the correct units!
            </p>
        </div>
        <div>
            <div>
                <h5>
                    Extruder Settings
                </h5>
            </div>
            <div data-bind="foreach: slicers.simplify_3d.extruders">
                <div>
                    <fieldset class="octolapse">
                        <legend data-bind="text: ('Extruder ' + ($index()+1).toString())"></legend>
                        <div>
                            <div>
                                <h5>Extruder - Ooze Control</h5>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_simplify_3d_extruder_use_retract_'+$index().toString())}">Retraction*</label>
                                <div class="controls">
                                    <label class="checkbox">
                                        <input data-bind="checked: $data.extruder_use_retract,
                                                          attr: {name: ('octolapse_simplify_3d_extruder_use_retract_'+$index().toString()),
                                                                 id: ('octolapse_simplify_3d_extruder_use_retract_'+$index().toString())}"
                                               title="Enable retraction" 
                                               type="checkbox" />Enabled
                                        <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.extruder_use_retract.md" data-help-title="Retraction" />
                                    </label>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_simplify_3d_retraction_distance_'+$index().toString())}">Retraction Distance*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.retraction_distance,
                                                          attr: {name: ('octolapse_simplify_3d_retraction_distance_'+$index().toString()),
                                                                 id: ('octolapse_simplify_3d_retraction_distance_'+$index().toString())}"
                                               type="number" step="0.01" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.retraction_distance.md" data-help-title="Retraction Distance" />
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_simplify_3d_retraction_distance_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_simplify_3d_retraction_vertical_lift_'+$index().toString())}">Retraction Vertical Lift*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.retraction_vertical_lift,
                                                          attr: {name: ('octolapse_simplify_3d_retraction_vertical_lift_'+$index().toString()),
                                                                 id: ('octolapse_simplify_3d_retraction_vertical_lift_'+$index().toString())}"
                                               type="number" step="0.01" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.retraction_vertical_lift.md" data-help-title="Retraction Vertical Lift" />
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_simplify_3d_retraction_vertical_lift_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_simplify_3d_retraction_speed_'+$index().toString())}">Retraction Speed*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.retraction_speed,
                                                          attr: {name: ('octolapse_simplify_3d_retraction_speed_'+$index().toString()),
                                                                 id: ('octolapse_simplify_3d_retraction_speed_'+$index().toString())}"
                                               type="number" step="0.1" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                        <span class="add-on">min</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.retraction_speed.md" data-help-title="Retraction Speed" />
                                   <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_simplify_3d_retraction_speed_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <p><i>* Indicates required fields</i></p>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div>
                <h5>Layer</h5>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_simplify_3d_layer_height">Layer Height</label>
                <div class="controls">
                    <div class="input-append form-inline">
                        <input id="octolapse_simplify_3d_layer_height" name="octolapse_simplify_3d_layer_height"
                               class="input-small text-right ignore_hidden_errors"
                               data-bind="value: slicers.simplify_3d.layer_height"
                               type="number" step="0.01" min="0" max="9999999" />
                        <span class="add-on">mm</span>
                    </div>
                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.layer_height.md" data-help-title="Layer Height" />
                    <div class="error_label_container text-error" data-error-for="octolapse_simplify_3d_layer_height"></div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_simplify_3d_vase_mode">Single outline corkscrew printing mode (vase mode)</label>
                <div class="controls">
                    <label class="checkbox">
                        <input id="octolapse_simplify_3d_vase_mode" name="octolapse_simplify_3d_vase_mode"
                               data-bind="checked: slicers.simplify_3d.spiral_vase_mode"
                               title="Enable Vase Mode"
                               type="checkbox" />Enabled
                        <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.vase_mode.md" data-help-title="Single outline corkscrew printing mode (vase mode)" />
                    </label>
                    <div class="error_label_container text-error" data-error-for="octolapse_simplify_3d_vase_mode"></div>
                </div>
            </div>
            <div>
                <h5>Speeds</h5>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_simplify_3d_x_y_axis_movement_speed">X/Y Axis Movement Speed*</label>
                <div class="controls">
                    <div class="input-append form-inline">
                        <input id="octolapse_simplify_3d_x_y_axis_movement_speed" name="octolapse_simplify_3d_x_y_axis_movement_speed"
                               class="input-small text-right ignore_hidden_errors"
                               data-bind="value: slicers.simplify_3d.x_y_axis_movement_speed"
                               type="number" step="0.1" min="0" max="9999999" required />
                        <span class="add-on">mm</span>
                        <span class="add-on">min</span>
                    </div>
                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.x_y_axis_movement_speed.md" data-help-title="X/Y Axis Movement Speed" />
                    <div class="error_label_container text-error" data-error-for="octolapse_simplify_3d_x_y_axis_movement_speed"></div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_simplify_3d_z_axis_movement_speed">Z Axis Movement Speed*</label>
                <div class="controls">
                    <div class="input-append form-inline">
                        <input id="octolapse_simplify_3d_z_axis_movement_speed" name="octolapse_simplify_3d_z_axis_movement_speed"
                               class="input-small text-right ignore_hidden_errors"
                               data-bind="value: slicers.simplify_3d.z_axis_movement_speed"
                               type="number" step="0.1" min="0" max="9999999" required />
                        <span class="add-on">mm</span>
                        <span class="add-on">min</span>
                    </div>
                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.simplify3d.z_axis_movement_speed.md" data-help-title="Z Axis Movement Speed" />
                    <div class="error_label_container text-error" data-error-for="octolapse_simplify_3d_z_axis_movement_speed"></div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <p><i>* Indicates required fields</i></p>
                </div>
            </div>
        </div>
    </div>
</script>
